{
  "name": "buddy-hall",
  "version": "0.1.0",
  "main": "main.js",
  "description": "Watch, Talk, and Hang out with your buddies.",
  "author": "BuddyHall",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "ELECTRON_BUILD=true npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/simple-peer": "^9.11.9",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.buddyhall.app",
    "productName": "BuddyHall",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video"
    },
    "files": [
      ".next/server/pages/**/*",
      ".next/static/**/*",
      ".next/standalone/**/*",
      "public/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}